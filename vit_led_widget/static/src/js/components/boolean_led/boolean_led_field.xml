<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="vit_led_widget.BooleanLEDField">
        <t t-if="props.on_color">
            <button t-attf-class="btn btn-sm mx-2 py-1" 
                t-attf-style="color: {{props.record.data[props.name] ? props.on_color: props.off_color}}" 
                t-att-data-tooltip="props.record.data[props.name] ? 'Process' : 'Resume'"  
                t-on-click.prevent.stop="update" >
                <i t-attf-class="fa {{props.icon}} {{props.record.data[props.name] ? 'fa-spin' : ''}} fa-2x"/>
            </button>
        </t>

        <t t-elif="props.color">
            <button t-attf-class="btn btn-sm mx-2 py-1 fa {{props.icon}} {{props.record.data[props.name] ? 'led-on':'led-off'}}" 
            t-attf-style="color: {{props.color}}" 
            t-att-data-tooltip="props.label" 
            t-on-click.prevent.stop="update" />
        </t>

        <t t-elif="props.field_color">
            <button t-attf-class="btn btn-sm mx-2 py-1 fa {{props.icon}} led-on" 
            t-attf-style="color: {{this.serve_color}}" 
            t-att-data-tooltip="props.label" 
            t-on-click.prevent.stop="update" />
        </t>
    </t>

</templates>
